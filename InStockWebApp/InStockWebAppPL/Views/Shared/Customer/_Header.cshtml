@using InStockWebAppDAL.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject IHttpContextAccessor HttpContextAccessor


<header
    class="header bg-white">
    <div class="container px-lg-3">
        <nav class="navbar navbar-expand-lg navbar-light py-3 px-lg-0">
            <a class="navbar-brand">
                <span class="fw-bold text-uppercase text-dark">Boutique</span>
            </a>
            <button class="navbar-toggler navbar-toggler-end" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <!-- Link--><a asp-controller="Home" asp-action="Index" class="nav-link active">Home</a>
                    </li>
                    <li class="nav-item">
                        <!-- Link--><a class="nav-link">Shop</a>
                    </li>
                    <li class="nav-item">
                        <!-- Link--><a class="nav-link">Product detail</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="pagesDropdown" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Pages</a>
                        <div class="dropdown-menu mt-3 shadow-sm" aria-labelledby="pagesDropdown">
                            <a class="dropdown-item border-0 transition-link">Homepage</a><a class="dropdown-item border-0 transition-link">Category</a><a class="dropdown-item border-0 transition-link" href="detail.html">Product detail</a><a class="dropdown-item border-0 transition-link" href="cart.html">Shopping cart</a><a class="dropdown-item border-0 transition-link" asp-action="Checkout" asp-controller="Home">Checkout</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    @{
                        var count = HttpContextAccessor.HttpContext.Session.GetInt32("shoppingCartSession");
                    }
                    
                    @if (HttpContextAccessor.HttpContext.Session.GetInt32("shoppingCartSession") is not null && count > 0)
                    {
                        <li class="nav-item">

                            <a asp-controller="Cart" asp-action="Index" class="nav-link"> <i class="fas fa-dolly-flatbed me-1 text-gray"></i>Cart<small class="text-gray fw-normal">(@count)</small></a>
                        </li>
                    }
                    else if (HttpContextAccessor.HttpContext.Session.GetInt32("shoppingCartSession") is null || count == 0)
                    {
                        <li class="nav-item">
                            <a href="#" class="nav-link"> <i class="fas fa-dolly-flatbed me-1 text-gray"></i>Cart<small class="text-gray fw-normal">(0)</small></a>
                        </li>
                    }


                    <li class="nav-item">
                        <a class="nav-link" href="#!">
                            <i class="far fa-heart me-1"></i><small class="text-gray fw-normal"> (0)</small>
                        </a>
                    </li>
                    <li class="nav-item">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <a class="nav-link" href="/Account/Logout">
                                <i class="fas fa-sign-out-alt me-1 text-gray fw-normal"></i>Logout
                            </a>
                        }
                        else
                        {
                            <a class="nav-link" href="/Account/Login">
                                <i class="fas fa-user me-1 text-gray fw-normal"></i>Login
                            </a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/Details"> <i class="fas fa-user me-1 text-gray fw-normal"></i> Profile</a>
                    </li>

                </ul>
            </div>
        </nav>
    </div>
</header>