@using InStockWebAppDAL.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject IHttpContextAccessor HttpContextAccessor
@using InStockWebAppPL.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{

    var Culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;

}

<header class="header bg-white">
    <div class="container px-lg-3">
        <nav class="navbar navbar-expand-lg navbar-light py-3 px-lg-0">
            <a class="navbar-brand">
                <span class="fw-bold text-uppercase text-dark">IN-STOCK</span>
            </a>
            @* <button class="navbar-toggler navbar-toggler-end" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"> *@
            @*     <span class="navbar-toggler-icon"></span> *@
            @* </button> *@
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto d-flex flex-row align-items-center">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">@SharedLocalizer["Home"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="FilterProduct">@SharedLocalizer["Shop"]</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="pagesDropdown" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@SharedLocalizer["Sections"]</a>
                        <div class="dropdown-menu mt-3 shadow-sm" aria-labelledby="pagesDropdown">
                            <a href="#categories" class="dropdown-item border-0 transition-link">@SharedLocalizer["Categories"]</a>
                            <a href="#discounts" class="dropdown-item border-0 transition-link">
                                @SharedLocalizer["Discounts"]</a>
                            <a href="#bestsellers" class="dropdown-item border-0 transition-link">
                                @SharedLocalizer["Best-Sellers"]</a>
                            <a href="#trending" class="dropdown-item border-0 transition-link">
                                @SharedLocalizer["Trending"]</a>
                            <a asp-action="Admin" asp-controller="Contact" class="dropdown-item border-0 transition-link">@SharedLocalizer["Contact"]</a>
                        </div>
                    </li>
                    @{
                        var count = HttpContextAccessor.HttpContext.Session.GetInt32("shoppingCartSession");
                    }

                    @if (HttpContextAccessor.HttpContext.Session.GetInt32("shoppingCartSession") is not null && count > 0)
                    {
                        <li class="nav-item">

                            <a asp-controller="Cart" asp-action="Index" class="nav-link"> <i class="icon-nav fas fa-dolly-flatbed me-1"></i>@SharedLocalizer["cart"]<small id="cartCount" class="text-dark fw-normal">(@count)</small></a>
                        </li>
                    }
                    else if (HttpContextAccessor.HttpContext.Session.GetInt32("shoppingCartSession") is null || count == 0)
                    {
                        <li class="nav-item">
                            <a asp-controller="Cart" asp-action="Index" class="nav-link"> <i class="icon-nav fas fa-dolly-flatbed me-1"></i>@SharedLocalizer["cart"]<small id="cartCount" class="text-dark fw-normal">(0)</small></a>
                        </li>
                    }

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Customer/Details"> <i class="icon-nav fas fa-user me-1 fw-normal"></i> Profile</a>
                        </li>
                    }
                    <li class="nav-item">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <a class="btn btn-dark" href="/Account/Logout"><i class="icon-nav fas fa-sign-out-alt me-1"></i>@SharedLocalizer["Log Out"] </a>
                        }
                        else
                        {
                            <a class="btn btn-dark" href="/Account/Login"><i class="icon-nav fas fa-sign-in-alt me-1"></i> @SharedLocalizer["Log In"]</a>
                        }
                    </li>

                </ul>
                    <partial name="~/Views/Shared/Customer/_SetLanguage.cshtml" />
              
            </div>
        </nav>
    </div>
</header>