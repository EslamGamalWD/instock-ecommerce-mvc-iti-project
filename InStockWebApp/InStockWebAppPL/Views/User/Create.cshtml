@model CreateUserVM
@inject ICountryRepository countryrepo
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">Add User</h4>
        </div>
    </div>
    <div class="card-body">
        <form class="needs-validation" enctype="multipart/form-data" asp-action="Create" asp-controller="User" novalidate>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FirstName">First name</label>
                    <input type="text" class="form-control" id="validationTooltip01" asp-for="FirstName" required>
                    <span asp-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LastName">Last name</label>
                    <input type="text" class="form-control" id="validationTooltip01" asp-for="LastName" required>
                    <span asp-for="LastName" class="text-danger"></span>

                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="PasswordHash">Password</label>
                    <input type="password" class="form-control" id="validationTooltip01" asp-for="PasswordHash" required>
                    <span asp-for="PasswordHash" class="text-danger"></span>

                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="UserName">UserName</label>
                    <input type="text" class="form-control" id="validationTooltip01" asp-for="UserName" required>
                    <span asp-for="UserName" class="text-danger"></span>

                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Email">Email</label>
                    <input type="Email" class="form-control" id="validationTooltip01" asp-for="Email" required>
                    <span asp-for="Email" class="text-danger"></span>

                </div>
                <div class="col-md-6 mb-3">
                    <label for="validationTooltip04">Gender</label>
                    <select asp-for="Gender" class="form-control" id="validationTooltip04" required>
                        <option selected disabled value="">Gender</option>
                        <option value="0">Male</option>
                        <option value="1">FeMale</option>
                    </select>
                    <div class="invalid-tooltip">
                        Please select a valid state.
                    </div>
                    <span asp-for="Gender" class="text-danger"></span>

                </div>
                <div class="col-md-6 mb-3">
                    <label for="validationTooltip04">UserType</label>
                    <select asp-for="UserType" class="form-control" id="validationTooltip04" required>
                        <option selected disabled value="">User Type</option>
                        <option value="0">Customer</option>
                        <option value="1">Admin</option>
                    </select>
                    <div class="invalid-tooltip">
                        Please select a valid state.
                    </div>
                    <span asp-for="UserType" class="text-danger"></span>

                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input type="PhoneNumber" class="form-control" id="validationTooltip01" asp-for="PhoneNumber" required>
                    <span asp-for="PhoneNumber" class="text-danger"></span>

                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="image">Image</label>

                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input asp-for="image" type="file" class="custom-file-input" id="inputGroupFile01">
                            <label class="custom-file-label selected" for="inputGroupFile01"></label>
                            <input type="hidden" class="ImageName" asp-for="image" />
                        </div>
                    </div>
                    <span asp-for="image" class="text-danger"></span>

                </div>
               
                
                
               
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelectCountry">Country</label>
                        </div>
                        <select asp-items="@(new SelectList(await countryrepo.GetAll(), "Id", "Name"))" class="custom-select" id="inputGroupSelectCountry">
                            <option selected disabled>Choose...</option>
                        </select>
                    </div>

                </div>
                <div class="col-4">
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelectState">State</label>
                        </div>
                        <select class="custom-select" id="inputGroupSelectState">
                        </select>
                    </div>
                </div>

                <div class="col-4">
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelectCity">City</label>
                            </div>
                            <select asp-for="CityId" class="custom-select" id="inputGroupSelectCity">
                            </select>
                        <span asp-for="CityId" class="text-danger"></span>

                        </div>
                  
                </div>


            </div>
            <button class="btn btn-primary" type="submit">Submit form</button>
            <button type="reset" class="btn btn-danger">Reset</button>
        </form>
    </div>
</div>

@section JS {
    <partial name="~/Views/Partials/User/_UserCreateJS.cshtml"  />

}
