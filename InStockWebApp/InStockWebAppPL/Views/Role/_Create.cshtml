@model CreateRoleVM


<div class="row">
    <div class="col-sm-12">
        <div class="card">

            <div class="card-body">
                <form asp-action="Create" asp-controller="Role" data-toggle="validator">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Name</label>
                                <input asp-for="Name" astype="text" class="form-control" placeholder="Enter Role Name" required>
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Add Role</button>
                    <button type="reset" class="btn btn-danger">Reset</button>
                </form>
            </div>
        </div>
    </div>
</div>