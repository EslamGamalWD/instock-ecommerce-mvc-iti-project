@model LoginVM

@{
    ViewData["Title"] = "inStock | Sign-In";
    Layout = "Account/_AccountLayout";
}

<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain">
                            <div class="mt-4 p-4">
                                <a asp-controller="Home" asp-action="Index" class="fw-bold text-uppercase text-dark logo-stock">IN-STOCK</a>
                            </div>
                            <div class="card-header pb-0 text-left bg-transparent">
                                <h3 class="font-weight-bolder text-info text-gradient">Welcome back</h3>
                                <p class="mb-0">Enter your email and password</p>
                                <p class="mb-0">to sign in</p>
                            </div>
                            <div class="card-body">
                                <form asp-action="Login" asp-controller="Account" method="post" role="form">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <label asp-for="Email">Email</label>
                                    <div class="mb-3">
                                        <input type="email" asp-for="Email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <label>Password</label>
                                    <div class="mb-3 password-wrapper">
                                        <input type="password" asp-for="Password" id="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <i id="togglepassword" class="fa fa-eye-slash password-icon password-icon-hidden"></i>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" checked="">
                                        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn bg-gradient-dark w-100 mt-4 mb-3">Sign in</button>
                                    </div>
                                </form>
                                <div class="card-footer text-center pt-0 px-lg-2 px-1">
                                    <p class="mt-2 text-sm mx-auto">
                                        Forgot your Password?
                                        <a asp-action="ForgotPassword" asp-controller="ForgotPassword" class="text-info text-gradient font-weight-bolder">Reset it</a>
                                    </p>
                                </div>
                                <div class="card-footer text-center pb-0 pt-0 px-lg-2 px-1">
                                    <p class="text-sm mx-auto">
                                        Don't have an account?
                                        <a asp-action="Register" asp-controller="Account" class="text-info text-gradient font-weight-bolder">Sign up</a>
                                    </p>
                                </div>
                                <div class="mt-4 position-relative text-center">
                                    <p class="text-sm font-weight-bold mb-2 text-secondary text-border d-inline z-index-2 bg-white px-3">
                                        or
                                    </p>
                                </div>
                                <form asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="">
                                    <div class="text-center">
                                        <a type="submit" class="btn bg-light w-100 mt-4 mb-0 d-flex flex-row align-items-center font-weight-bolder gap-3" asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google">
                                            <ion-icon class="icon-login" name="logo-google" size="large"></ion-icon>
                                            Sign in with Google
                                        </a>
                                    </div>
                                    <div class="text-center">
                                        <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Facebook" type="submit" class="btn bg-light w-100 mt-4 mb-0 d-flex flex-row align-items-center font-weight-bolder gap-3">
                                            <ion-icon class="icon-login" name="logo-facebook" size="large"></ion-icon>
                                            Sign in with Facebook
                                        </a>
                                    </div>
                                    <div class="text-center">
                                        <a type="submit" class="btn bg-light w-100 mt-4 mb-0 d-flex flex-row align-items-center font-weight-bolder gap-3" asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Microsoft">
                                            <ion-icon class="icon-login" name="logo-windows" size="large"></ion-icon>
                                            Sign in with Microsoft
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
                            <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6" style="background-image:url('@Url.Content("~/Account/img/curved-11.jpg")')"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>