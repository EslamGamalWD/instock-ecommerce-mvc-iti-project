@model LoginVM

@{
    ViewData["Title"] = "inStock | Sign-In";
    Layout = "Account/_AccountLayout";
}

<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain">
                            <div class="mt-2">
                                <img class="w-45 border-radius-2xl logo" src="~/Account/img/logo-color.png" alt=""/>
                            </div>
                            <div class="card-header pb-0 text-left bg-transparent">
                                <h3 class="font-weight-bolder text-info text-gradient">Welcome back</h3>
                                <p class="mb-0">Enter your email and password</p>
                                <p class="mb-0">to sign in</p>
                            </div>
                            <div class="card-body">
                                <form asp-action="Login" asp-controller="Account" method="post" role="form">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <label asp-for="Email">Email</label>
                                    <div class="mb-3">
                                        <input type="email" asp-for="Email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <label>Password</label>
                                    <div class="mb-3">
                                        <input type="password" asp-for="Password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" checked="">
                                        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Sign in</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center pt-0 px-lg-2 px-1">
                                <p class="mb-4 text-sm mx-auto">
                                    Don't have an account?
                                    <a asp-action="Register" asp-controller="Account" class="text-info text-gradient font-weight-bold">Sign up</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
                            <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6" style="background-image:url('@Url.Content("~/Account/img/curved-11.jpg")')"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>