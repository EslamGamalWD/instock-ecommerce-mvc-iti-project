@using InStockWebAppDAL.Entities.Enumerators
@inject ICountryRepository countryrepo
@model RegisterVM

@{
    ViewData["Title"] = "inStock | Registration";
    Layout = "Account/_AccountLayout";
}

<main class="main-content  mt-0">
<section class="min-vh-100 mb-8">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('@Url.Content("~/Account/img/curved14.jpg")');">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container">
            <div class="row justify-content-center">
                <div class="mt-4 text-center">
                    <a asp-controller="Home" asp-action="Index" class="fw-bold text-uppercase text-dark logo-stock">IN-STOCK</a>
                </div>
                <div class="col-lg-5 text-center mx-auto">
                    <h1 class="text-white mb-2 mt-5">Welcome!</h1>
                    <p class="text-lead text-white">Get the best of Shopping with IN-STOCK</p>
                    <p class="text-lead text-white">Embrace the Unexpected...</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-lg-n10 mt-md-n11 mt-n10">
            <div class="col-xl-8 col-lg-5 col-md-7 mx-auto">
                <div class="card z-index-0">
                    <div class="card-header text-center pt-4">
                        <h5>Register with</h5>
                    </div>
                    <div class="row px-xl-5 px-sm-4 px-3">
                        <div class="col-3 ms-auto px-1">
                            <a class="btn btn-outline-light w-100" asp-action="ExternalLogin" asp-route-provider="Facebook">
                                <ion-icon class="icon-login" name="logo-facebook" size="large"></ion-icon>
                            </a>
                        </div>
                        <div class="col-3 px-1">
                            <a class="btn btn-outline-light w-100" asp-action="ExternalLogin" asp-route-provider="Microsoft">
                                <ion-icon class="icon-login" name="logo-windows" size="large"></ion-icon>
                            </a>
                        </div>
                        <div class="col-3 me-auto px-1">
                            <a class="btn btn-outline-light w-100" asp-action="ExternalLogin" asp-route-provider="Google">
                                <ion-icon class="icon-login" name="logo-google" size="large"></ion-icon>
                            </a>
                        </div>
                        <div class="mt-2 position-relative text-center">
                            <p class="text-sm font-weight-bold mb-2 text-secondary text-border d-inline z-index-2 bg-white px-3">
                                or
                            </p>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Register" asp-controller="Account">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="mb-3">
                                        <input type="text" asp-for="FirstName" class="form-control" placeholder="First Name" aria-label="Name" aria-describedby="email-addon">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">

                                    <div class="mb-3">
                                        <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name" aria-label="LastName" aria-describedby="email-addon">
                                        <span asp-validation-for="LastName" class="text-danger"></span>

                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="mb-3">
                                        <input type="text" asp-for="UserName" class="form-control" placeholder="User Name" aria-label="UserName" aria-describedby="email-addon">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">

                                    <div class="mb-3">
                                        <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" aria-label="PhoneNumber" aria-describedby="email-addon">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="mb-3">
                                        <input type="email" asp-for="Email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">

                                    <div class="mb-3">
                                        <input type="password" asp-for="Password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="email-addon">
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>

                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<Gender>()" class="form-control">
                                        <option selected disabled>Select Your Gender</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <div class="input-group">

                                        <select asp-items="@(new SelectList(await countryrepo.GetAll(), "Id", "Name"))" class="form-control" id="inputGroupSelectCountry">
                                            <option selected disabled>Country</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="input-group">

                                        <select class="form-control" id="inputGroupSelectState">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="input-group">

                                        <select asp-for="CityId" class="form-control" id="inputGroupSelectCity">
                                        </select>
                                        <span asp-for="CityId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-check form-check-info text-left">
                                <input class="form-check-input" type="checkbox" value id="flexCheckDefault" checked>

                                <label class="form-check-label" for="flexCheckDefault">
                                    I agree the <a href="javascript:;" class="text-dark font-weight-bolder">Terms and Conditions</a>
                                </label>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Sign up</button>
                            </div>
                            <p class="text-sm text-center mt-3 mb-0">Already have an account? <a asp-controller="Account" asp-action="Login" class="text-dark font-weight-bolder">Sign in</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<footer class="footer py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-4 mx-auto text-center">
                <a asp-controller="Home" asp-action="Index" target="_blank" class="text-secondary me-xl-5 me-3 mb-sm-0 mb-2">
                    Home
                </a>
                <a asp-controller="FilterProduct" asp-action="Index" target="_blank" class="text-secondary me-xl-5 me-3 mb-sm-0 mb-2">
                    Products
                </a>
                <a href="javascript:;" target="_blank" class="text-secondary me-xl-5 me-3 mb-sm-0 mb-2">
                    Team
                </a>
                <a href="javascript:;" target="_blank" class="text-secondary me-xl-5 me-3 mb-sm-0 mb-2">
                    Blog
                </a>
                <a href="javascript:;" target="_blank" class="text-secondary me-xl-5 me-3 mb-sm-0 mb-2">
                    Pricing
                </a>
            </div>
            <div class="col-lg-8 mx-auto text-center mb-4 mt-2">
                <a href="javascript:;" target="_blank" class="text-secondary me-xl-4 me-4">
                    <span class="text-lg fab fa-dribbble"></span>
                </a>
                <a href="javascript:;" target="_blank" class="text-secondary me-xl-4 me-4">
                    <span class="text-lg fab fa-twitter"></span>
                </a>
                <a href="javascript:;" target="_blank" class="text-secondary me-xl-4 me-4">
                    <span class="text-lg fab fa-instagram"></span>
                </a>
                <a href="javascript:;" target="_blank" class="text-secondary me-xl-4 me-4">
                    <span class="text-lg fab fa-pinterest"></span>
                </a>
                <a href="javascript:;" target="_blank" class="text-secondary me-xl-4 me-4">
                    <span class="text-lg fab fa-github"></span>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-8 mx-auto text-center mt-1">
                <p class="mb-0 text-secondary">
                    Copyright © <script>
                document.write(new Date().getFullYear())
              </script> IN-STOCK.
                </p>
            </div>
        </div>
    </div>
</footer>

</main>


@section HeadSection
{
    <style>
        .async-hide {
          opacity: 0 !important
        }
      </style>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <partial name="~/Views/Partials/User/_UserCreateJS.cshtml"/>
}


@section scripts
{
    <script src="~/Account/js/popper.min.js"></script>
    <script src="~/Account/js/bootstrap.min.js"></script>
    <script src="~/Account/js/perfect-scrollbar.min.js"></script>
    <script src="~/Account/js/smooth-scrollbar.min.js"></script>


    <script>
        let win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
          let options = {
            damping: '0.5'
          }
          Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
      </script>

    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script src="~/Account/js/soft-ui-dashboard.min.js?v=1.0.7"></script>
}